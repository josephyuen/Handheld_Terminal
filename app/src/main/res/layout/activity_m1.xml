<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
		
        <TextView
            android:id="@+id/m1_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey"
            android:text="@string/m1_title"
            android:textColor="@color/white"
            android:textSize="28sp" />
		<RelativeLayout
		    android:id="@+id/ll_layout01"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:layout_below="@+id/m1_title"
			android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
		    >
		    <TextView
                android:id="@+id/pwd_type"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textSize="22sp"
                android:layout_centerVertical="true"
                android:text="@string/m1_type" />
		    <Spinner
                android:id="@+id/m1_spinner"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/pwd_type"
                android:spinnerMode="dialog"
                android:textSize="24sp" />
		</RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_layout01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_layout01"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" 
            android:focusable="true" 
			android:focusableInTouchMode="true">

            <TextView
                android:id="@+id/card_pwd"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textSize="22sp"
                android:layout_centerVertical="true"
                android:text="@string/m1_pwd" />

            <EditText
                android:id="@+id/et_pwd"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/card_pwd"
                android:background="@color/wheat"
                android:hint="@string/m1_input_pwd"
                android:text="ffffffffffff"
                android:textSize="20sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_layout02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_layout01"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/card_num"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/m1_card_name"
                android:textSize="22sp" />

            <EditText
                android:id="@+id/ed_card_num"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/card_num"
                android:background="@color/wheat"
                android:editable="false"
                android:hint="@string/m1_show_card"
                android:textSize="20sp" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_layout09"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_layout02"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/card_type"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/m1_card_type"
                android:textSize="22sp" />

            <EditText
                android:id="@+id/ed_card_type"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/card_type"
                android:background="@color/wheat"
                android:editable="false"
                android:textSize="20sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_layout99"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_layout09"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_strSectorNum"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/m1_sector_num"
                android:textSize="22sp" />

            <EditText
                android:id="@+id/et_ss"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/tv_strSectorNum"
                android:background="@color/wheat"
                android:inputType="number"
                android:textSize="20sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_layout05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_layout99"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/block_num"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/m1_block_num"
                android:textSize="22sp" />

            <EditText
                android:id="@+id/ed_block_num"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/block_num"
                android:background="@color/wheat"
                android:inputType="number" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_layout06"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_layout05"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/write_block"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/m1_write_block"
                android:textSize="22sp" />

            <EditText
                android:id="@+id/ed_write_block"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/write_block"
                android:background="@color/wheat"
                android:hint="@string/m1_hint_tips32" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_layout07"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_layout06"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/read_block"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/m1_read_block"
                android:textSize="22sp" />

            <EditText
                android:id="@+id/ed_read_block"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/read_block"
                android:background="@color/wheat"
                android:editable="false" />
        </RelativeLayout>

        <TextView
            android:id="@+id/func_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_layout07"
            android:layout_marginTop="10dp"
            android:background="@color/grey"
            android:text="@string/m1_necessary_done"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <RelativeLayout
            android:id="@+id/rl_layout08"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/func_title"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/llayout_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btn_getCardNum"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/m1_get_card" />

                <Button
                    android:id="@+id/btn_write"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/m1_write_numblock" />

                <Button
                    android:id="@+id/btn_read"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/m1_get_numblock" />
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/tips"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_layout08"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text=""
            android:textColor="@color/red"
            android:textSize="24sp" />
    </RelativeLayout>

</ScrollView>