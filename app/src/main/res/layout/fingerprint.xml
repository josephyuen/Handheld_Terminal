<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:orientation="vertical" >
		<Spinner
            android:id="@+id/spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1:1"
            android:textSize="10sp"/>

        <Button
            android:id="@+id/Register_Finger"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/register_fingerprint"
            android:textColor="@color/black"
            android:textSize="10sp" />

        <Button
            android:id="@+id/Validate_Finger"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/validate_fingerprint"
            android:textColor="@color/black"
            android:textSize="10sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1:N" 
            android:textSize="10sp"/>
        
        <Button
            android:id="@+id/Register2_Finger"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/register_fingerprint"
            android:textColor="@color/black"
            android:textSize="10sp" />

        <Button
            android:id="@+id/Validate2_Finger"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/validate_fingerprint"
            android:textColor="@color/black"
            android:textSize="10sp" />

        <Button
            android:id="@+id/ClearFlash_Finger"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/clear_flash"
            android:textColor="@color/black"
            android:textSize="10sp" />

        <Button
            android:id="@+id/Calibration_Finger"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/calibration"
            android:textColor="@color/black"
            android:textSize="10sp" />

        <Button
            android:id="@+id/BackReg_Finger"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/back"
            android:textSize="10sp"
            android:visibility="gone" />
    </LinearLayout>

    <ImageView
        android:id="@+id/Image_Finger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitXY" />

</LinearLayout>